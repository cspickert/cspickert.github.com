%article.post
  %header
    %h2
      %a{:href => item.rel_url}= item.title
    - date = item[:timestamp]
    = "Posted on "
    %time{:datetime => date.to_s, :pubdate => true}<
      = date.strftime("%A, %b %e, %Y")
    - if item[:tags]
      = " in #{tags_for(item)}"
  %section.content
    = content
  %footer
